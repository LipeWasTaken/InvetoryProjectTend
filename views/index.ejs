<% var page = "login"; %>

<!-- Mouse Effect Canvas -->
<canvas id="mouse-trail"></canvas>
<div id="mouse-glow"></div>
<%- include('partials/header') %>

<div id="login-page" class="min-h-screen flex items-center justify-center p-4">
    <div id="login-container" class="login-box" >
        <div id="login-header" style="padding-top: 10px; padding-bottom: 10px;">
            <i class="fa-solid fa-boxes-stacked icon" ></i>
            <h1>Stockify</h1>
            
        </div>

        <form id="login-form" class="space-y-6">
            <div class="input-group">
                <i class="fa-regular fa-envelope input-icon"></i>
                <input type="email" placeholder="Adresse e-mail" required>
            </div>

            <div class="input-group">
                <i class="fa-solid fa-key input-icon"></i>
                <input type="password" placeholder="Mot de passe" required>
            </div>



            <button type="submit" class="login-button">Se connecter</button>
        </form>

        <div class="text-center" style="padding-top: 10px; padding-bottom: 10px;">
            <p>Pas encore de compte ? <span class="create-account"><a href="/createAccount">Créer un compte</a></span></p>
        </div>
        <div class="flex items-center justify-between text-sm">
            <span class="forgot-password">Mot de passe oublié ?</span>
        </div>
    </div>
</div>

<%- include('partials/footer') %>
